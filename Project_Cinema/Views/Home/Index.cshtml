@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner/Slider -->
<section class="banner-slider">
    <div class="slider-container">
        <div class="slide active">
            <div class="slide-image" style="background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=1920');"></div>
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="container">
                    <div class="movie-info">
                        <h2 class="movie-title">Avengers: Endgame</h2>
                        <div class="movie-meta">
                            <span class="genre">Hành động, Khoa học viễn tưởng</span>
                            <span class="duration"><i class="fas fa-clock"></i> 181 phút</span>
                        </div>
                        <p class="movie-description">Cuộc chiến cuối cùng của các siêu anh hùng để cứu vũ trụ khỏi sự hủy diệt hoàn toàn.</p>
                        <div class="movie-actions">
                            <a asp-controller="Movie" asp-action="Index" asp-fragment="now-showing" class="btn btn-primary">Đặt vé</a>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="1" class="btn btn-secondary">
                                <i class="fas fa-play"></i> Xem trailer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="slide">
            <div class="slide-image" style="background-image: url('https://images.unsplash.com/photo-1536440136628-849c177e76a1?w=1920');"></div>
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="container">
                    <div class="movie-info">
                        <h2 class="movie-title">Spider-Man: No Way Home</h2>
                        <div class="movie-meta">
                            <span class="genre">Hành động, Siêu anh hùng</span>
                            <span class="duration"><i class="fas fa-clock"></i> 148 phút</span>
                        </div>
                        <p class="movie-description">Peter Parker phải đối mặt với những thách thức lớn nhất trong cuộc đời mình.</p>
                        <div class="movie-actions">
                            <a asp-controller="Movie" asp-action="Index" asp-fragment="now-showing" class="btn btn-primary">Đặt vé</a>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="2" class="btn btn-secondary">
                                <i class="fas fa-play"></i> Xem trailer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="slide">
            <div class="slide-image" style="background-image: url('https://images.unsplash.com/photo-1535016120720-40c646be5580?w=1920');"></div>
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="container">
                    <div class="movie-info">
                        <h2 class="movie-title">Dune</h2>
                        <div class="movie-meta">
                            <span class="genre">Khoa học viễn tưởng, Phiêu lưu</span>
                            <span class="duration"><i class="fas fa-clock"></i> 155 phút</span>
                        </div>
                        <p class="movie-description">Cuộc hành trình đến hành tinh sa mạc nguy hiểm nhất trong vũ trụ.</p>
                        <div class="movie-actions">
                            <a asp-controller="Movie" asp-action="Index" asp-fragment="now-showing" class="btn btn-primary">Đặt vé</a>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="3" class="btn btn-secondary">
                                <i class="fas fa-play"></i> Xem trailer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slider Controls -->
        <button class="slider-btn prev" onclick="changeSlide(-1)">
            <i class="fas fa-chevron-left"></i>
        </button>
        <button class="slider-btn next" onclick="changeSlide(1)">
            <i class="fas fa-chevron-right"></i>
        </button>

        <!-- Slider Indicators -->
        <div class="slider-indicators">
            <span class="indicator active" onclick="currentSlide(1)"></span>
            <span class="indicator" onclick="currentSlide(2)"></span>
            <span class="indicator" onclick="currentSlide(3)"></span>
        </div>
    </div>
</section>

<!-- Quick Booking -->
<section class="quick-booking">
    <div class="container">
        <h2 class="section-title">Đặt vé nhanh</h2>
        <div class="booking-form">
            <div class="form-group">
                <label for="movie-select">Chọn phim</label>
                <select id="movie-select" class="form-control">
                    <option value="">-- Chọn phim --</option>
                    <option value="1">Avengers: Endgame</option>
                    <option value="2">Spider-Man: No Way Home</option>
                    <option value="3">Dune</option>
                    <option value="4">The Matrix Resurrections</option>
                    <option value="5">No Time to Die</option>
                </select>
            </div>
            <div class="form-group">
                <label for="theater-select">Chọn rạp</label>
                <select id="theater-select" class="form-control">
                    <option value="">-- Chọn rạp --</option>
                    <option value="1">CGV Vincom Center</option>
                    <option value="2">CGV Landmark 81</option>
                    <option value="3">Lotte Cinema Đà Nẵng</option>
                    <option value="4">Galaxy Cinema Nguyễn Du</option>
                    <option value="5">BHD Star Cineplex</option>
                </select>
            </div>
            <div class="form-group">
                <label for="date-select">Chọn ngày</label>
                <input type="date" id="date-select" class="form-control">
            </div>
            <div class="form-group">
                <label for="time-select">Chọn suất chiếu</label>
                <select id="time-select" class="form-control">
                    <option value="">-- Chọn suất --</option>
                    <option value="1">09:00</option>
                    <option value="2">11:30</option>
                    <option value="3">14:00</option>
                    <option value="4">16:30</option>
                    <option value="5">19:00</option>
                    <option value="6">21:30</option>
                </select>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-booking">Đặt vé ngay</button>
            </div>
        </div>
    </div>
</section>

<!-- Now Showing Movies -->
@await Component.InvokeAsync("NowShowingMovies", new { count = 6 })

<!-- Coming Soon Movies -->
@await Component.InvokeAsync("ComingSoonMovies", new { count = 6 })

<!-- Promotions -->
<section id="promotions" class="promotions-section">
    <div class="container">
        <h2 class="section-title">Khuyến mãi & Ưu đãi</h2>
        <div class="promotions-grid">
            <div class="promotion-card">
                <div class="promotion-image">
                    <img src="https://images.unsplash.com/photo-1556740758-90de374c12ad?w=400" alt="Promotion 1">
                </div>
                <div class="promotion-content">
                    <h3>Combo 2 vé tặng 1 bắp</h3>
                    <p>Mua 2 vé xem phim bất kỳ, tặng ngay 1 bắp size M. Áp dụng từ thứ 2 đến thứ 5.</p>
                    <a asp-controller="Promotion" asp-action="Index" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>

            <div class="promotion-card">
                <div class="promotion-image">
                    <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=400" alt="Promotion 2">
                </div>
                <div class="promotion-content">
                    <h3>Giảm 30% cho học sinh, sinh viên</h3>
                    <p>Xuất trình thẻ học sinh/sinh viên để được giảm 30% giá vé. Áp dụng tất cả các ngày trong tuần.</p>
                    <a asp-controller="Promotion" asp-action="Index" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>

            <div class="promotion-card">
                <div class="promotion-image">
                    <img src="https://images.unsplash.com/photo-1556742502-ec7c0e9f34b1?w=400" alt="Promotion 3">
                </div>
                <div class="promotion-content">
                    <h3>Thứ 3 giá chỉ 50k</h3>
                    <p>Tất cả các suất chiếu thứ 3 hàng tuần chỉ với 50.000đ/vé. Số lượng có hạn!</p>
                    <a asp-controller="Promotion" asp-action="Index" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</section>
