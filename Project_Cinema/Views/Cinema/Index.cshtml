@{
    ViewData["Title"] = "Cinema Page";
}

<!-- Page Banner -->
<section class="cinema-banner">
    <div class="banner-overlay"></div>
    <div class="container">
        <div class="banner-content">
            <h1 class="page-title">
                <i class="fas fa-map-marker-alt"></i> Danh sách rạp chiếu
            </h1>
            <p class="page-subtitle">Tìm rạp chiếu gần bạn nhất</p>
        </div>
    </div>
</section>

<!-- Cinema Section -->
<section class="cinema-section">
    <div class="container">
        <!-- Filter Bar -->
        <div class="filter-bar">
            <div class="filter-group">
                <label for="region-filter">
                    <i class="fas fa-map"></i> Khu vực:
                </label>
                <select id="region-filter" class="filter-select">
                    <option value="all">Tất cả khu vực</option>
                    <option value="hcm">TP. Hồ Chí Minh</option>
                    <option value="hanoi">Hà Nội</option>
                    <option value="danang">Đà Nẵng</option>
                    <option value="cantho">Cần Thơ</option>
                </select>
            </div>

            <div class="filter-group">
                <label for="search-input">
                    <i class="fas fa-search"></i> Tìm kiếm:
                </label>
                <input type="text"
                       id="search-input"
                       class="filter-search"
                       placeholder="Tên rạp, địa chỉ...">
            </div>

            <button class="btn-reset-filter" id="resetFilterBtn">
                <i class="fas fa-redo"></i> Đặt lại
            </button>
        </div>

        <!-- Cinema Grid -->
        <div class="cinema-grid" id="cinemaGrid">
            <!-- Cinema cards will be generated by JavaScript -->
        </div>

        <!-- Empty State -->
        <div class="empty-state" id="emptyState" style="display: none;">
            <div class="empty-state-icon">
                <i class="fas fa-theater-masks"></i>
            </div>
            <h3 class="empty-state-title">Không tìm thấy rạp chiếu</h3>
            <p class="empty-state-text">Không có rạp chiếu nào phù hợp với bộ lọc của bạn. Vui lòng thử lại với tiêu chí khác.</p>
            <button class="btn btn-primary" onclick="resetFilters()">
                <i class="fas fa-redo"></i> Đặt lại bộ lọc
            </button>
        </div>
    </div>
</section>
