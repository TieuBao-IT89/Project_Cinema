@model IEnumerable<Project_Cinema.Models.MovieModel>

<section id="coming-soon" class="movies-section coming-soon">
    <div class="container">
        <h2 class="section-title">Phim sắp chiếu</h2>
        <div class="movies-grid">
            @foreach (var movie in Model)
            {
                <div class="movie-card">
                    <div class="movie-poster">
                        <img src="@(string.IsNullOrWhiteSpace(movie.PosterUrl)
                            ? $"https://via.placeholder.com/300x450?text={movie.Title}"
                            : movie.PosterUrl)" alt="@movie.Title">
                        <div class="coming-soon-badge">Sắp chiếu</div>
                        <div class="movie-overlay">
                            <a asp-controller="Movie"
                               asp-action="Details"
                               asp-route-id="@movie.MovieId"
                               class="btn btn-sm">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                    <div class="movie-info">
                        <h3 class="movie-name">@movie.Title</h3>
                        <div class="movie-details">
                            <span class="genre">@movie.AgeRating</span>
                            <span class="release-date">
                                <i class="fas fa-calendar"></i>
                                @(movie.ReleaseDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
