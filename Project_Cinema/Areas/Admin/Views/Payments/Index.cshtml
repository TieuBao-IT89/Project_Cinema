@model Project_Cinema.ViewModels.PaymentIndexViewModel

@{
    ViewData["AdminTitle"] = "Thanh toán";
}

<main class="dashboard-content">
    <section class="page-header">
        <div class="page-header-left">
            <h2 class="section-title">
                <i class="fas fa-credit-card"></i> Thanh toán
            </h2>
            <p class="section-subtitle">Danh sách thanh toán</p>
        </div>
    </section>

    <section class="table-section">
        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Danh sách thanh toán</h3>
            </div>
            <div class="table-body">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Mã giao dịch</th>
                            <th>Mã đặt vé</th>
                            <th>Khách hàng</th>
                            <th>Số tiền</th>
                            <th>Phương thức</th>
                            <th>Trạng thái</th>
                            <th>Thanh toán lúc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="7" class="empty-row">Chưa có dữ liệu thanh toán.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.PaymentId</td>
                                    <td>@item.BookingCode</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Amount.ToString("N0")đ</td>
                                    <td>@item.Method</td>
                                    <td><span class="status-pill">@item.Status</span></td>
                                    <td>@(item.PaidAt?.ToString("dd/MM/yyyy HH:mm") ?? "--")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>
