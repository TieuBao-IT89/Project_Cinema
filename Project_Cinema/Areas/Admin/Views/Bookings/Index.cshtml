@model Project_Cinema.ViewModels.BookingIndexViewModel

@{
    ViewData["AdminTitle"] = "Đặt vé";
}

<main class="dashboard-content">
    <section class="page-header">
        <div class="page-header-left">
            <h2 class="section-title">
                <i class="fas fa-receipt"></i> Đặt vé
            </h2>
            <p class="section-subtitle">Danh sách đặt vé mới nhất</p>
        </div>
    </section>

    <section class="table-section">
        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Danh sách đặt vé</h3>
            </div>
            <div class="table-body">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Khách hàng</th>
                            <th>Phim</th>
                            <th>Rạp</th>
                            <th>Suất chiếu</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="7" class="empty-row">Chưa có dữ liệu đặt vé.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.BookingCode</td>
                                    <td>@item.UserName</td>
                                    <td>@item.MovieTitle</td>
                                    <td>@item.CinemaName</td>
                                    <td>@item.StartsAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.TotalAmount.ToString("N0")đ</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>
